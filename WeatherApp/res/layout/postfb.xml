<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

   

    <Button
        android:id="@+id/shareCurrentWeatherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="@string/shareCurrentWeather" />

    <Button
        android:id="@+id/fbCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shareCurrentWeatherButton"
        android:layout_alignRight="@+id/shareCurrentWeatherButton"
        android:layout_below="@+id/shareCurrentWeatherButton"
        android:layout_marginTop="44dp"
        android:text="@string/cancel" />
 
</RelativeLayout>